import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	
		
		Scanner sc = new Scanner(System.in);
	
		int num = sc.nextInt();
		
		for(int i=0; i<num; i++) {
			
			for(int y=num; y>(i+1); y--) {
				System.out.print(" ");
			}
			for(int k=0; k<(i+1); k++) {
				System.out.print("*");
			}
			
			System.out.println();
		}
	
	}
}
